generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  User
  ClubOwner
  Admin
}

model User {
  id           String   @id @default(uuid()) @db.Uuid
  email        String   @unique
  passwordHash String
  role         UserRole @default(User)
  clubs        Club[]   @relation("ClubUsers")

  @@map("users")
}

model Club {
  id          String @id @default(uuid()) @db.Uuid
  name        String @unique
  link        String
  phone       String @unique
  users       User[] @relation("ClubUsers")
  email       String @unique
  description String
  type        String

  address   Address @relation(fields: [addressId], references: [id])
  addressId String  @db.Uuid

  @@map("clubs")
}

model Address {
  id      String @id @default(uuid()) @db.Uuid
  street  String @unique
  city    String
  state   String
  zipcode String
  clubs   Club[]

  @@map("addresses")
}
